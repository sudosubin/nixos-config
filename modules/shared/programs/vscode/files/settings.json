{
  // fonts
  "markdown.preview.fontFamily": "Pretendard",
  "editor.fontFamily": "'PragmataProMono Nerd Font Mono', 'Pretendard'",
  "debug.console.fontFamily": "'PragmataProMono Nerd Font Mono', 'Pretendard'",
  "terminal.integrated.fontFamily": "'PragmataProMono Nerd Font Mono', 'Pretendard'",
  "editor.fontSize": 13.25,
  "debug.console.fontSize": 13.25,
  "markdown.preview.fontSize": 13.25,
  "terminal.integrated.fontSize": 13.25,

  // search
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // theme
  "workbench.colorTheme": "GitHub Light",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "material-icon-theme.activeIconPack": "react",
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.files.associations": {
    "*.gotmpl": "template"
  },
  "workbench.colorCustomizations": {
    "errorLens.errorBackground": "#E06C751A",
    "errorLens.errorForeground": "#E06C75",
    "errorLens.warningBackground": "#D19A661A",
    "errorLens.warningForeground": "#D19A66",
    "errorLens.infoBackground": "#61AFEF1A",
    "errorLens.infoForeground": "#61AFEF",
    "errorLens.hintBackground": "#98C3791A",
    "errorLens.hintForeground": "#98C379"
  },
  "explorer.compactFolders": false,
  "workbench.tree.indent": 16,
  "workbench.startupEditor": "none",
  "workbench.list.smoothScrolling": true,
  "workbench.enableExperiments": false,
  "workbench.editor.enablePreview": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.smoothScrolling": true,
  "editor.rulers": [80, 120],
  "editor.insertSpaces": true,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true,
  "trailing-spaces.backgroundColor": "rgba(255, 0, 0, 0.2)",
  "trailing-spaces.borderColor": "rgba(255, 100, 100, 0.1)",
  "window.menuBarVisibility": "hidden",

  // theme scrollbar / minimap
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.overviewRulerBorder": false,

  // transition
  "editor.cursorSmoothCaretAnimation": "on",

  // git
  "gitlens.currentLine.format": "${author} â€¢ ${date}, ${message}",
  "gitlens.currentLine.dateFormat": "YYYY-MM-DD",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,

  // files
  "files.associations": {
    "*.yaml.gotmpl": "goyaml",
    ".dockerignore": "ignore",
    "*.bats": "shellscript",
    ".env": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git/*/**": true,
    "**/node_modules/*/**": true,
    "**/.venv/*/**": true
  },
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.trimAutoWhitespace": true,

  // kubernetes
  "vs-kubernetes": {
    "checkForMinikubeUpgrade": false
  },

  // language (python)
  "[python]": {
    "editor.rulers": [80, 120],
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // language (ruby)
  "[ruby]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // language (javascript)
  "emmet.excludeLanguages": ["typescriptreact"],
  "svelte.enable-ts-plugin": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "[css]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript][javascriptreact][json][jsonc][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },

  // language (terraform)
  "[terraform]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // language (yaml)
  "yaml.format.enable": true,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true
  },

  // language (bash)
  "shellcheck.customArgs": ["-x"],
  "shellcheck.ignorePatterns": {
    ".env": true
  },
  "shellcheck.disableVersionCheck": true,
  "shellformat.path": "/etc/profiles/per-user/sudosubin/bin/shfmt",

  // language (nix)
  "nix.enableLanguageServer": true,
  "nix.serverSettings": {
    "nil": {
      "diagnostics": {
        "ignored": ["unused_binding", "unused_with"]
      },
      "formatting": {
        "command": ["nixpkgs-fmt"]
      }
    }
  },
  "[nix]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  // languages (etc)
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[mdx]": {
    "files.trimTrailingWhitespace": false
  },
  "[makefile]": {
    "editor.insertSpaces": false
  },
  "[nim]": {
    "editor.tabSize": 2
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[rust]": {
    "editor.formatOnSave": true
  },
  "java.import.generatesMetadataFilesAtProjectRoot": false,
  "prisma.showPrismaDataPlatformNotification": false,
  "errorLens.margin": "6ch",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.gutterIconSize": "65%",
  "errorLens.gutterIconSet": "defaultOutline",

  // telemetry, etc
  "http.proxyStrictSSL": false,
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "update.showReleaseNotes": false,
  "update.mode": "none",
  "workbench.welcomePage.walkthroughs.openOnInstall": false
}
